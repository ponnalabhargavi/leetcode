lass Solution:
    def totalCost(self, costs: List[int], k: int, candidates: int) -> int:
        heap=[]
        left=0
        tot=0
        right=len(costs)-1
        for i in range(candidates):
            if left<=right:
                heapq.heappush(heap,(costs[left],left))
                left+=1
            if left<=right:
                heapq.heappush(heap,(costs[right],right))
                right-=1
        while k:
            cost,i=heapq.heappop(heap)
            tot +=cost
            k-=1
            if left<=right:
                if i<=left:
                    heapq.heappush(heap,(costs[left],left))
                    left+=1
                elif i>right:
                    heapq.heappush(heap,(costs[right],right))
                    right-=1
        return tot
